{
    "name": "serendipity_hq/bundle-stripe",
    "type": "symfony-bundle",
    "description": "A set of utilities to integrate Stripe into Symfony.",
    "keywords": ["stripe", "bundle", "symfony"],
    "homepage": "https://github.com/Aerendir/bundle-stripe",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/Aerendir/bundle-stripe/issues"
    },
    "authors": [
        {
            "name": "Adamo Aerendir Crespi",
            "email": "hello@aerendir.me"
        }
    ],
    "require": {
        "php": "^7.2",
        "doctrine/orm": "^2.5",
        "serendipity_hq/component-value-objects": "dev-dev",
        "stripe/stripe-php": "^5.2",
        "symfony/framework-bundle": "^3.0||^4.0",
        "symfony/translation": "^3.0|^4.0|^5.0",
        "thecodingmachine/safe": "^1.0"
    },
    "require-dev": {
        "doctrine/common": "^2.8",
        "doctrine/doctrine-bundle": "^1.7",
        "drenso/phan-extensions": "@stable",
        "friendsofphp/php-cs-fixer": "^2.0",
        "monolog/monolog": "^1.23",
        "phan/phan": "^3.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-doctrine": "@stable",
        "phpstan/phpstan-phpunit": "@stable",
        "phpstan/phpstan-symfony": "@stable",
        "rector/rector": "^0.7",
        "roave/security-advisories": "dev-master",
        "symfony/form": "^3.0|^4.0|^5.0",
        "symfony/phpunit-bridge": "^5.1",
        "symfony/var-dumper": "^3.0|^4.0|^5.0",
        "symfony/yaml": "^3.0|^4.0|^5.0",
        "thecodingmachine/phpstan-safe-rule": "@stable",
        "vimeo/psalm": "^3.12",
        "weirdan/doctrine-psalm-plugin": "@stable"
    },
    "autoload": {
        "psr-4": {
            "SerendipityHQ\\Bundle\\StripeBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SerendipityHQ\\Bundle\\StripeBundle\\Tests\\": "tests"
        }
    },
    "config":{
        "sort-packages": true
    },
    "conflict": {
        "nikic/php-parser": "4.6.0"
    }
}
