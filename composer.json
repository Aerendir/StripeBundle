        "doctrine/orm": "~2.5",
        "serendipity_hq/php_value_objects": "^2.6",
        "symfony/framework-bundle": "~2",
        "stripe/stripe-php": "*"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "dev-master",
        "doctrine/doctrine-bundle": "*",
        "doctrine/common": "~2.4",
        "friendsofphp/php-cs-fixer": "*",
        "phpunit/phpunit": "*",
        "symfony/yaml": "~2.5",
        "symfony/var-dumper": "*"
