<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SerendipityHQ\Bundle\StripeBundle\Model\StripeLocalCustomer" table="stripe_customers">
        <id name="id" type="string" column="id" length="25"/>
        <field name="accountBalance" type="integer" column="account_balance" nullable="true"/>
        <field name="businessVatId" type="string" column="business_vat_id" nullable="true"/>
        <field name="description" type="text" column="description" nullable="true"/>
        <one-to-many target-entity="SerendipityHQ\Bundle\StripeBundle\Model\StripeLocalCard" mapped-by="customer" field="sources" />
    </entity>
</doctrine-mapping>
